{
  "name": "markup",
  "version": "1.0.0",
  "description": "Write markdown with a WYSIWYG and get the source.",
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all --sequential build --parallel electron watch lint",
    "perm": "chmod -Rf 744 ./",
    "clean": "rimraf node_modules dist main.js",
    "electron": "electron main.js",
    "watch": "gulp watch",
    "build": "gulp build",
    "lint": "node_modules/jshint/bin/jshint --verbose --show-non-errors src",
    "package": "electron-packager ./ markup --platform=all --arch=x64 --version=0.37.5"
  },
  "homepage": "https://github.com/timurtu/markdown-text-editor#readme",
  "dependencies": {
    "github-markdown-css": "^2.2.1",
    "highlight.js": "^9.3.0",
    "pdc": "^0.2.2",
    "remarkable": "^1.6.2",
    "toolbarjs": "^1.1.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "electron-prebuilt": "^0.37.5",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-changed": "^1.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.2.0",
    "jshint": "^2.9.1",
    "npm-run-all": "^1.7.0",
    "rimraf": "^2.5.2"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timurtu/markup.git"
  },
  "keywords": [
    "markdown",
    "text",
    "desktop"
  ],
  "author": "Timur Uzel <timurt.uzel@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/timurtu/markdown-text-editor/issues"
  }
}
